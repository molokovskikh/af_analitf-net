<UserControl x:Class="AnalitF.Net.Client.Views.Dialogs.CreateDreamReport"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:AnalitF.Net.Client.Controls"
	MinWidth="200">
	<StackPanel Margin="4">
		<GroupBox Header="За период" Style="{StaticResource FilterElement}">
			<StackPanel Orientation="Horizontal">
				<Label VerticalAlignment="Center" Padding="5,0,5,0">с</Label>
				<DatePicker Name="Begin"/>
				<Label VerticalAlignment="Center" Padding="5,0,5,0">по</Label>
				<DatePicker Name="End"/>
			</StackPanel>
		</GroupBox>
		<c:PopupSelector VerticalAlignment="Center" x:Name="Addresses2" ButtonContent="Адреса" Member="Item.Name" />
		<c:PopupSelector VerticalAlignment="Center" x:Name="Suppliers" ButtonContent="Поставщики" Member="Item.FullName" />
		<c:PopupSelector VerticalAlignment="Center" x:Name="Producers" ButtonContent="Производители" Member="Item.Name" />
		<StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
			<Button Name="OK" Margin="0, 0, 5, 0">ОК</Button>
			<Button Name="TryClose">Отмена</Button>
		</StackPanel>
	</StackPanel>
</UserControl>
