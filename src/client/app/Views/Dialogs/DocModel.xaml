<UserControl x:Class="AnalitF.Net.Client.Views.Dialogs.DocModel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:binders="clr-namespace:AnalitF.Net.Client.Binders"
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
	xmlns:behaviors="clr-namespace:AnalitF.Net.Client.Controls.Behaviors"
	MinHeight="300"
	MinWidth="400"
	behaviors:Focusable.DefaultFocus="{x:Reference Document}">

	<i:Interaction.Behaviors>
		<behaviors:Focusable />
	</i:Interaction.Behaviors>

	<UserControl.InputBindings>
		<KeyBinding Gesture="ESCAPE" Command="binders:Commands.InvokeViewModel" CommandParameter="TryClose" />
		<KeyBinding Gesture="SPACE" Command="binders:Commands.InvokeViewModel" CommandParameter="TryClose" />
	</UserControl.InputBindings>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<ToolBar Grid.Row="0">
			<Button Name="Save">Сохранить</Button>
			<Button Name="Print">Печать</Button>
		</ToolBar>
		<FlowDocumentScrollViewer Name="Document" Grid.Row="1"
			VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" />
	</Grid>
</UserControl>
