<UserControl x:Class="AnalitF.Net.Client.Views.Dialogs.SimpleSettingsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:binders="clr-namespace:AnalitF.Net.Client.Binders"
	xmlns:behaviors="clr-namespace:AnalitF.Net.Client.Controls.Behaviors"
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
	behaviors:Focusable.DefaultFocus="{x:Reference OK}">

	<i:Interaction.Behaviors>
		<behaviors:Focusable />
	</i:Interaction.Behaviors>

	<UserControl.InputBindings>
		<KeyBinding Gesture="ESCAPE" Command="binders:Commands.InvokeViewModel" CommandParameter="TryClose" />
	</UserControl.InputBindings>

	<StackPanel>
		<Grid Name="Data">
			<Grid.ColumnDefinitions>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition></ColumnDefinition>
			</Grid.ColumnDefinitions>
		</Grid>
		<StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Center">
			<Button x:Name="TryClose" MinWidth="100" IsDefault="True">ОК</Button>
			<Button x:Name="Cancel" MinWidth="100" IsCancel="True">Отменить</Button>
		</StackPanel>
	</StackPanel>
</UserControl>
