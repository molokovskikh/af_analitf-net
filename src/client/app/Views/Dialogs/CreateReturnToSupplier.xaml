<UserControl x:Class="AnalitF.Net.Client.Views.Dialogs.CreateReturnToSupplier"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	MinWidth="200">
	<StackPanel Margin="4">
		<Label>Поставщик</Label>
		<ComboBox Name="SupplierName"
			ItemsSource="{Binding Suppliers}"
			SelectedItem="{Binding ReturnToSupplier.Supplier}" DisplayMemberPath="Name" IsEditable="True" />
		<Label>Док. №</Label>
		<TextBox Name="ReturnToSupplier_NumDoc" />
		<Label>Дата документа</Label>
		<DatePicker Name="ReturnToSupplier_DateDoc" />
		<StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
			<Button Name="OK" Margin="0, 0, 5, 0">ОК</Button>
			<Button Name="TryClose">Отмена</Button>
		</StackPanel>
	</StackPanel>
</UserControl>
