<UserControl x:Class="AnalitF.Net.Client.Views.Dialogs.OrderWarning"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:binders="clr-namespace:AnalitF.Net.Client.Binders"
	xmlns:behaviors="clr-namespace:AnalitF.Net.Client.Controls.Behaviors"
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
	behaviors:Focusable.DefaultFocus="{x:Reference TryClose}">

	<i:Interaction.Behaviors>
		<behaviors:Focusable />
	</i:Interaction.Behaviors>

	<UserControl.InputBindings>
		<KeyBinding Gesture="ESCAPE" Command="binders:Commands.InvokeViewModel" CommandParameter="TryClose" />
	</UserControl.InputBindings>

	<StackPanel>
		<Label FontWeight="Bold" Name="Header" />
		<TextBox Name="Text" Height="300" Width="700" Margin="4"
			VerticalScrollBarVisibility="Auto"
			HorizontalScrollBarVisibility="Auto"
			TextWrapping="Wrap">
		</TextBox>
		<StackPanel Orientation="Horizontal">
			<Button Name="TryClose" Margin="4">Отправить заказы</Button>
			<Button Name="Cancel" Margin="4">Отменить отправку</Button>
			<Button Name="Save" Margin="4">Сохранить в файл</Button>
		</StackPanel>
	</StackPanel>
</UserControl>
