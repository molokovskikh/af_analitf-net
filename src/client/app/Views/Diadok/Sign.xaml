<UserControl x:Class="AnalitF.Net.Client.Views.Diadok.Sign"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	IsEnabled="{Binding IsEnabled.Value}"
	MinHeight="200" MinWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0">
			<Label FontSize="18">Подписание Документа</Label>
			<Label Content="{Binding Payload.Entity.FileName}" />
		</StackPanel>
		<StackPanel Grid.Row="1">
			<Label>Документы будут подписаны сертификатом:</Label>
			<Label Content="{Binding Settings.Value.DiadokCert}" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" Grid.Row="2">
			<Button Margin="3" Name="Save">Подписать</Button>
			<Button Margin="3" Name="TryClose">Отмена</Button>
		</StackPanel>
	</Grid>
</UserControl>
