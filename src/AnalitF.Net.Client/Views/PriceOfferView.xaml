<UserControl x:Class="AnalitF.Net.Client.Views.PriceOfferView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:c="clr-namespace:AnalitF.Net.Client.Controls"
		xmlns:Extentions="clr-namespace:AnalitF.Net.Client.Extentions">
	<UserControl.Resources>
		<Style TargetType="Label" x:Key="Legend">
			<Setter Property="Width" Value="250" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
		</Style>
		<Style TargetType="ComboBox" x:Key="Filter">
			<Setter Property="Width" Value="150" />
			<Setter Property="IsEditable" Value="False" />
			<Setter Property="IsReadOnly" Value="True" />
			<Setter Property="Margin" Value="0, 0, 4, 0" />
		</Style>
		<Extentions:BoolToVisibilityConverter x:Key="VisibilityConverter" />
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
			<TextBlock Margin="5">
				Прайс-лист <Run x:Name="Price_Name"/>, регион <Run x:Name="Price_RegionName"/>
			</TextBlock>

			<Button Margin="0, 0, 4, 0">В каталог (F2)</Button>
			<Button Margin="0, 0, 4, 0">Попазать синонимы (Ctrl+N)</Button>
			<Label>Позиций:</Label>
			<Label x:Name="Offers_Count"></Label>
			<ComboBox Style="{StaticResource Filter}" Name="Filters">
			</ComboBox>
		</StackPanel>
		<StackPanel Orientation="Horizontal" Grid.Row="1">
			<TextBox Width="150" Margin="0, 0, 4, 0"></TextBox>
			<ComboBox Style="{StaticResource Filter}" Name="Producers">
			</ComboBox>
		</StackPanel>
		<c:DataGrid Grid.Row="2" x:Name="Offers">
		</c:DataGrid>
		<Grid Grid.Row="3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
			</Grid.RowDefinitions>
			<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
				<Label Foreground="Red" Visibility="{Binding Path=CurrentOffer.VitallyImportant, Converter={StaticResource VisibilityConverter}}">ЖНВЛС</Label>
				<Label Foreground="Green" Visibility="{Binding Path=CurrentCatalog.MandatoryList, Converter={StaticResource VisibilityConverter}}">Обяз. список</Label>
			</StackPanel>
			<Label Grid.Row="0" Grid.Column="1">Наименование:</Label>
			<Label Grid.Row="0" Grid.Column="2" x:Name="CurrentOffer_ProductSynonym"></Label>
			<Button Grid.Row="1" Grid.Column="0" Name="ShowDescription">Описание (F1, Пробел)</Button>
			<Label Grid.Row="1" Grid.Column="1">МНН:</Label>
			<Label Grid.Row="1" Grid.Column="2" x:Name="CurrentCatalog_Name_Mnn_Name"></Label>
		</Grid>
		<StackPanel Grid.Row="4">
			<Label>Подсказка</Label>
			<StackPanel Orientation="Horizontal">
				<Label Style="{StaticResource Legend}">Уцененные препараты</Label>
				<Label Style="{StaticResource Legend}">Ожидаемая позиция</Label>
				<Label Style="{StaticResource Legend}">Препарат запрещен к заказу</Label>
				<Label Style="{StaticResource Legend}">Жизненно важные препараты</Label>
				<Label Style="{StaticResource Legend}">Прайс-лист - лидер</Label>
			</StackPanel>
		</StackPanel>
		<StackPanel Orientation="Horizontal" Grid.Row="5">
			<Button>История</Button>
			<Button>Удалить заказ</Button>
			<TextBlock Margin="5">
				Заказано <Run x:Name="Order_Lines_Count"/> позиций на сумму <Run x:Name="Order_Sum"/>
			</TextBlock>
		</StackPanel>
	</Grid>
</UserControl>
