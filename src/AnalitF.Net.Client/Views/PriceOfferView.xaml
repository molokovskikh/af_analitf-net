<UserControl x:Class="AnalitF.Net.Client.Views.PriceOfferView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:c="clr-namespace:AnalitF.Net.Client.Controls"
		xmlns:Extentions="clr-namespace:AnalitF.Net.Client.Extentions"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
		xmlns:cal="http://www.caliburnproject.org">
	<i:Interaction.Triggers>
		<i:EventTrigger EventName="KeyDown">
			<cal:ActionMessage MethodName="TryClose">
			</cal:ActionMessage>
		</i:EventTrigger>
	</i:Interaction.Triggers>
	<UserControl.Resources>
		<Extentions:BoolToVisibilityConverter x:Key="VisibilityConverter" />
		<Style TargetType="Label" x:Key="Legend">
			<Setter Property="Width" Value="250" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
			<Setter Property="Margin" Value="4" />
			<Setter Property="Padding" Value="0" />
		</Style>

		<Style TargetType="Label" x:Key="VitallyImportantLegend" BasedOn="{StaticResource ResourceKey=Legend}">
			<Setter Property="Foreground" Value="Green"></Setter>
		</Style>
		<Style x:Key="VitallyImportant" TargetType="{x:Type DataGridCell}">
			<Style.Triggers>
				<DataTrigger Binding="{Binding VitallyImportant}" Value="true">
					<Setter Property="Foreground" Value="Green"/>
				</DataTrigger>
				<DataTrigger Binding="{Binding Banned}" Value="true">
					<Setter Property="Background" Value="Red"/>
				</DataTrigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="Label" x:Key="JunkLegend" BasedOn="{StaticResource ResourceKey=Legend}">
			<Setter Property="Background" Value="#f29e66"></Setter>
		</Style>
		<Style x:Key="Junk" TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource ResourceKey=VitallyImportant}">
			<Style.Triggers>
				<DataTrigger Binding="{Binding Junk}" Value="true">
					<Setter Property="Background" Value="#f29e66"/>
				</DataTrigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="Label" x:Key="BannedLegend" BasedOn="{StaticResource ResourceKey=Legend}">
			<Setter Property="Background" Value="Red"></Setter>
		</Style>

		<Style TargetType="Label" x:Key="LeaderLegend" BasedOn="{StaticResource ResourceKey=Legend}">
			<Setter Property="Background" Value="#C0DCC0"></Setter>
		</Style>
		<Style x:Key="Leader" TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource ResourceKey=VitallyImportant}">
			<Style.Triggers>
				<DataTrigger Binding="{Binding Leader}" Value="true">
					<Setter Property="Background" Value="#C0DCC0"/>
				</DataTrigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="ComboBox" x:Key="Filter">
			<Setter Property="Width" Value="150" />
			<Setter Property="IsEditable" Value="False" />
			<Setter Property="IsReadOnly" Value="True" />
			<Setter Property="Margin" Value="0, 0, 4, 0" />
		</Style>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
			<TextBlock Margin="5">
				Прайс-лист <Run x:Name="Price_Name"/>, регион <Run x:Name="Price_RegionName"/>
			</TextBlock>

			<Button Margin="0, 0, 4, 0">В каталог (F2)</Button>
			<Button Margin="0, 0, 4, 0">Попазать синонимы (Ctrl+N)</Button>
			<Label>Позиций:</Label>
			<Label x:Name="Offers_Count"></Label>
			<ComboBox Style="{StaticResource Filter}" x:Name="Filters">
			</ComboBox>
		</StackPanel>
		<StackPanel Orientation="Horizontal" Grid.Row="1">
			<TextBox Width="150" Margin="0, 0, 4, 0"></TextBox>
			<ComboBox Style="{StaticResource Filter}" x:Name="Producers">
			</ComboBox>
		</StackPanel>
		<c:DataGrid Grid.Row="2" x:Name="Offers" CellStyle="{StaticResource ResourceKey=VitallyImportant}">
			<DataGrid.Columns>
				<DataGridTextColumn Width="*" Header="Код" Binding="{Binding Code}" />
				<DataGridTextColumn Width="*" Header="Название" Binding="{Binding ProductSynonym}" />
				<DataGridTextColumn Width="*" Header="Производитель" Binding="{Binding ProducerSynonym}" />
				<DataGridTextColumn Width="*" Visibility="Collapsed" Header="Кат.производитель" />
				<DataGridTextColumn Width="*" Header="Упаковка" Binding="{Binding Volume}" />
				<DataGridTextColumn Width="*" Visibility="Collapsed" Header="Документ" Binding="{Binding Doc}" />
				<DataGridTextColumn Width="*" Header="Примечание" Binding="{Binding Note}" />
				<DataGridTextColumn CellStyle="{StaticResource ResourceKey=Junk}" Width="*" Header="Срок годн." Binding="{Binding Period}" />
				<DataGridTextColumn Width="*" Header="Реестр.цена" Binding="{Binding RegistryCost}" />
				<DataGridTextColumn Width="*" Visibility="Collapsed" Header="Кратность" Binding="{Binding RequestRatio}" />
				<DataGridTextColumn Width="*" Visibility="Collapsed" Header="Мин.сумма" Binding="{Binding OrderCost}" />
				<DataGridTextColumn Width="*" Visibility="Collapsed" Header="Мин.кол-во" Binding="{Binding MinOrderCount}" />
				<DataGridTextColumn Width="*" Header="Пред.зарег.цена" />
				<DataGridTextColumn Width="*" Header="Цена производителя" Binding="{Binding ProducerCost}" />
				<DataGridTextColumn Width="*" Header="Наценака поставщика" Binding="{Binding ProducerSynonym}" />
				<DataGridTextColumn Width="*" Header="НДС" Binding="{Binding NDS}" />
				<DataGridTextColumn Width="*" Header="Цена поставщика" Binding="{Binding Cost}" />
				<DataGridTextColumn CellStyle="{StaticResource ResourceKey=Junk}" Width="*" Header="Цена" />
				<DataGridTextColumn Width="*" Header="Остаток" Binding="{Binding Quantity}" />
				<DataGridTextColumn Width="*" Visibility="Collapsed" Header="Розн.цена" />
				<DataGridTextColumn Width="*" Header="Мин.цена" Binding="{Binding LeaderCost}" />
				<DataGridTextColumn CellStyle="{StaticResource ResourceKey=Leader}" Width="*" Header="Прайс - лидер" Binding="{Binding LeaderPrice.SupplierName}" />
				<DataGridTextColumn CellStyle="{StaticResource ResourceKey=Leader}" Width="*" Visibility="Collapsed" Header="Регион - лидер" Binding="{Binding LeaderRegion}" />
				<DataGridTextColumn Width="*" Header="Заказ" />
				<DataGridTextColumn Width="*" Header="Сумма" />
			</DataGrid.Columns>
		</c:DataGrid>
		<Grid Grid.Row="3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
			</Grid.RowDefinitions>
			<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
				<Label Foreground="Red" Visibility="{Binding Path=CurrentOffer.VitallyImportant, Converter={StaticResource VisibilityConverter}}">ЖНВЛС</Label>
				<Label Foreground="Green" Visibility="{Binding Path=CurrentCatalog.MandatoryList, Converter={StaticResource VisibilityConverter}}">Обяз. список</Label>
			</StackPanel>
			<Label Grid.Row="0" Grid.Column="1">Наименование:</Label>
			<Label Grid.Row="0" Grid.Column="2" x:Name="CurrentOffer_ProductSynonym"></Label>
			<Button Grid.Row="1" Grid.Column="0" x:Name="ShowDescription">Описание (F1, Пробел)</Button>
			<Label Grid.Row="1" Grid.Column="1">МНН:</Label>
			<Label Grid.Row="1" Grid.Column="2" x:Name="CurrentCatalog_Name_Mnn_Name"></Label>
		</Grid>
		<StackPanel Grid.Row="4">
			<Label>Подсказка</Label>
			<StackPanel Orientation="Horizontal">
				<Label Style="{StaticResource JunkLegend}">Уцененные препараты</Label>
				<Label Style="{StaticResource BannedLegend}">Препарат запрещен к заказу</Label>
				<Label Style="{StaticResource VitallyImportantLegend}">Жизненно важные препараты</Label>
				<Label Style="{StaticResource LeaderLegend}">Прайс-лист - лидер</Label>
			</StackPanel>
		</StackPanel>
		<StackPanel Orientation="Horizontal" Grid.Row="5">
			<Button>История</Button>
			<Button>Удалить заказ</Button>
			<TextBlock Margin="5">
				Заказано <Run x:Name="Order_Lines_Count"/> позиций на сумму <Run x:Name="Order_Sum"/>
			</TextBlock>
		</StackPanel>
	</Grid>
</UserControl>
