<UserControl x:Class="AnalitF.Net.Client.Views.CatalogView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:c="clr-namespace:AnalitF.Net.Client.Controls">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel Margin="4" Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
			<TextBox Width="150" x:Name="SearchText" Margin="0, 0, 4, 0"></TextBox>
			<ComboBox Width="150" IsEditable="False" IsReadOnly="true" Margin="0, 0, 4, 0">
				<ComboBoxItem>Все</ComboBoxItem>
				<ComboBoxItem>Жизненноважные</ComboBoxItem>
				<ComboBoxItem>Обязательный ассортимент</ComboBoxItem>
			</ComboBox>
			<Button Margin="0, 0, 4, 0">Попазать синонимы (Ctrl+N)</Button>
		</StackPanel>
		<c:DataGrid Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" x:Name="CatalogNames">
		</c:DataGrid>
		<c:DataGrid Grid.Row="1" Grid.Column="1" x:Name="CatalogForms">
		</c:DataGrid>
		<Grid Grid.Row="2" Grid.Column="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
			</Grid.RowDefinitions>
			<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
				<Label>ЖНВЛС</Label>
				<Label>Обяз. список</Label>
			</StackPanel>
			<Label Grid.Row="0" Grid.Column="1">Наименование:</Label>
			<Label Grid.Row="0" Grid.Column="2"></Label>
			<Button Grid.Row="1" Grid.Column="0">Описание (F1, Пробел)</Button>
			<Label Grid.Row="1" Grid.Column="1">МНН:</Label>
			<Label Grid.Row="1" Grid.Column="2"></Label>
		</Grid>
		<Image Height="125" Grid.Row="3" Grid.Column="1"></Image>
		<StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="4">
			<CheckBox Margin="0, 0, 4, 0">Поиск по части наименования</CheckBox>
			<CheckBox Margin="0, 0, 4, 0">Отображать весь каталог</CheckBox>
			<CheckBox Margin="0, 0, 4, 0">Поиск по форме выпуска</CheckBox>
		</StackPanel>
	</Grid>
</UserControl>
