<UserControl x:Class="AnalitF.Net.Client.Views.PriceView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:c="clr-namespace:AnalitF.Net.Client.Controls" mc:Ignorable="d"
	xmlns:binders="clr-namespace:AnalitF.Net.Client.Binders"
	binders:FocusBehavior.DefaultFocus="{x:Reference Prices}">

	<UserControl.InputBindings>
		<KeyBinding Gesture="ESCAPE" Command="binders:Commands.InvokeViewModel" CommandParameter="NavigateBackward" />
		<KeyBinding Gesture="F3" Command="binders:Commands.InvokeViewModel" CommandParameter="SwitchShowLeaders" />
	</UserControl.InputBindings>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition Width="200"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel Style="{StaticResource ResourceKey=FilterPanel}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
			<TextBlock Margin="5" FontWeight="Bold">
				Всего прайс листов: <Run x:Name="Prices_Count"></Run>
			</TextBlock>
		</StackPanel>

		<c:DataGrid Grid.Row="1" Grid.Column="0" x:Name="Prices" CellStyle="{StaticResource Price}"
			CurrentItem="{Binding CurrentPrice}"
			IsReadOnly="{Binding User.IsPriceEditDisabled, FallbackValue=true}">
			<DataGrid.Columns>
				<DataGridTextColumn Width="75*" CellStyle="{StaticResource ResourceKey=NotBasePrice}" Header="Прайс-лист"
					Binding="{Binding Name}"
					IsReadOnly="True" />
				<DataGridTextColumn Width="57*" Header="Регион"
					Binding="{Binding RegionName}"
					IsReadOnly="True" />
				<DataGridTextColumn Width="36*" Header="Склад" Binding="{Binding Storage, Converter={StaticResource BoolToChar}}" IsReadOnly="True">
					<DataGridTextColumn.CellStyle>
						<Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
							<Setter Property="Block.TextAlignment" Value="Center"></Setter>
						</Style>
					</DataGridTextColumn.CellStyle>
				</DataGridTextColumn>
				<DataGridCheckBoxColumn Width="65*" Header="В работе" Binding="{Binding Active, UpdateSourceTrigger=PropertyChanged}" />
				<DataGridTextColumn Width="50*" Header="Позиций" Binding="{Binding PositionCount}" IsReadOnly="True" />
				<DataGridTextColumn Width="45*" Header="Заказ" Binding="{Binding Order.LinesCount}" IsReadOnly="True" />
				<DataGridTextColumn Width="51*" Header="Сумма" Binding="{Binding Order.Sum}" IsReadOnly="True" />
				<DataGridTextColumn Width="95*" Header="Дата прайс-листа" Binding="{Binding PriceDate}" IsReadOnly="True" />
				<DataGridTextColumn Width="60*" Header="Месячный заказ" Binding="{Binding WeeklyOrderSum}" IsReadOnly="True" />
				<DataGridTextColumn Width="65*" Header="Недельный заказ" Binding="{Binding MonthlyOrderSum}" IsReadOnly="True" />
			</DataGrid.Columns>
		</c:DataGrid>
		<TextBox Grid.Row="1" Grid.Column="0"
				Style="{StaticResource PopupSearch}"
				x:Name="QuickSearch_SearchText"
				Visibility="{Binding QuickSearch.SearchTextVisible, Converter={StaticResource VisibilityConverter}}"
				IsEnabled="{Binding QuickSearch.IsEnabled}"></TextBox>

		<Grid Grid.Row="1" Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>

				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition Height="Auto"></RowDefinition>

				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition></RowDefinition>

				<RowDefinition Height="Auto"></RowDefinition>
				<RowDefinition></RowDefinition>
			</Grid.RowDefinitions>

			<Label Grid.Row="0">Информация</Label>
			<TextBlock Grid.Row="1" x:Name="CurrentPrice_SupplierFullName" Style="{StaticResource PriceInfo}"></TextBlock>

			<TextBlock Grid.Row="2" Style="{StaticResource PriceInfo}">
				Телефон: <Run x:Name="CurrentPrice_Phone"></Run>
			</TextBlock>

			<TextBlock Grid.Row="3" Style="{StaticResource PriceInfo}">
				Минимальный заказ: <Run x:Name="CurrentPrice_MinOrderSum_MinOrderSum"></Run>
			</TextBlock>

			<StackPanel Grid.Row="4">
				<TextBlock Grid.Row="4" Style="{StaticResource PriceInfo}">Email:</TextBlock>
				<ItemsControl Padding="20, 0, 5, 5" Name="CurrentPrice_Emails">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<TextBlock>
								<Hyperlink Command="binders:Commands.NavigateUri" CommandParameter="{Binding Uri}">
									<Run Text="{Binding Name}"></Run>
								</Hyperlink>
							</TextBlock>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>

			<Label Grid.Row="5">Контактная информация:</Label>
			<TextBox Grid.Row="6" Padding="5" Style="{StaticResource ReadOnlyText}" x:Name="CurrentPrice_ContactInfo"></TextBox>

			<Label Grid.Row="7">Оперативная информация:</Label>
			<TextBox Grid.Row="8" Style="{StaticResource ReadOnlyText}" Padding="5" x:Name="CurrentPrice_OperativeInfo"></TextBox>
		</Grid>

		<StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource ResourceKey=FilterPanel}">
			<CheckBox Style="{StaticResource ResourceKey=FilterCheckBox}" Name="ShowLeaders">Показать только лидирующие позиции (F3)</CheckBox>
		</StackPanel>
	</Grid>
</UserControl>
