<UserControl x:Class="AnalitF.Net.Client.Views.Dialogs.PostUpdate"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:binders="clr-namespace:AnalitF.Net.Client.Binders"
	xmlns:behaviors="clr-namespace:AnalitF.Net.Client.Controls.Behaviors"
	xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
	behaviors:Focusable.DefaultFocus="{x:Reference TryClose}">

	<i:Interaction.Behaviors>
		<behaviors:Focusable />
	</i:Interaction.Behaviors>

	<UserControl.InputBindings>
		<KeyBinding Gesture="ESCAPE" Command="binders:Commands.InvokeViewModel" CommandParameter="TryClose" />
	</UserControl.InputBindings>

	<StackPanel>
		<Label Name="Header" FontWeight="Bold" />
		<TextBlock Padding="5" Name="Text" TextWrapping="Wrap" />
		<StackPanel Orientation="Horizontal">
			<Button Name="Show" Margin="4">Показать накладные</Button>
			<Button Name="TryClose" Margin="4">Отмена</Button>
		</StackPanel>
	</StackPanel>
</UserControl>
