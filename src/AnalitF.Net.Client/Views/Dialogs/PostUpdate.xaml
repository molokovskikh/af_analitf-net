<UserControl x:Class="AnalitF.Net.Client.Views.Dialogs.PostUpdate"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:binders="clr-namespace:AnalitF.Net.Client.Binders"
	binders:FocusBehavior.DefaultFocus="{x:Reference TryClose}">

	<UserControl.InputBindings>
		<KeyBinding Gesture="ESCAPE" Command="binders:Commands.InvokeViewModel" CommandParameter="TryClose" />
	</UserControl.InputBindings>

	<StackPanel>
		<Label Name="Header" FontWeight="Bold" />
		<TextBlock Padding="5" Name="Text" TextWrapping="Wrap" />
		<StackPanel Orientation="Horizontal">
			<Button Name="Show" Margin="4">Показать накладные</Button>
			<Button Name="TryClose" Margin="4">Отмена</Button>
		</StackPanel>
	</StackPanel>
</UserControl>
