			<Setter Property="ContentTemplate">
				<Setter.Value>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<Canvas Height="15" Width="11" Margin="3">
								<Path Fill="Transparent" Stroke="Gray" StrokeThickness="0.5"
