<UserControl x:Class="AnalitF.Net.Client.Views.Parts.InlineEditWarningView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Block.TextAlignment="Center" Visibility="{Binding ElementName=OrderWarning, Path=Visibility}">
		<Label FontSize="16" Foreground="Red" x:Name="OrderWarning" Background="{x:Static SystemColors.ControlLightLightBrush}">
			<Label.Style>
				<Style TargetType="Label">
					<Style.Triggers>
						<Trigger Property="Content" Value="{x:Null}">
							<Setter Property="Visibility" Value="Collapsed"></Setter>
						</Trigger>
					</Style.Triggers>
				</Style>
			</Label.Style>
		</Label>
	</StackPanel>
</UserControl>
